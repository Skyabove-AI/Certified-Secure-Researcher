---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Login - Certified Secure Researcher™">
	<!-- Header -->
	<header>
		<div class="container">
			<div class="header-inner">
				<a href="/" class="logo">
					<img src="/Images/CSR.png" alt="Certified Secure Researcher™" />
					<h1>Certified Secure Researcher<sup>™</sup></h1>
				</a>
			</div>
		</div>
	</header>

	<!-- Login Section -->
	<section class="login-section">
		<div class="container">
			<div class="login-container">
				<div class="login-card">
					<h2>Welcome Back</h2>
					<p class="login-subtitle">Log in to your CSR account</p>

					<form class="login-form">
						<div class="form-group">
							<label for="email">Email Address</label>
							<input type="email" id="email" name="email" required placeholder="your.email@institution.edu">
						</div>

						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" id="password" name="password" required placeholder="Enter your password">
						</div>

						<div class="form-options">
							<label class="checkbox-label">
								<input type="checkbox" name="remember">
								<span>Remember me</span>
							</label>
							<a href="#" class="forgot-link">Forgot password?</a>
						</div>

						<button type="submit" class="btn btn-primary btn-large">Log In</button>

						<p class="signup-link">Don't have an account? <a href="/signup">Sign up here</a></p>
					</form>
				</div>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer>
		<div class="container">
			<div class="footer-content">
				<div class="footer-brand">
					<img src="/Images/CSR.png" alt="Certified Secure Researcher™" class="footer-logo" />
					<h3>Certified Secure Researcher™</h3>
					<p>Trusted security certification for researchers worldwide.</p>
				</div>
				<div class="footer-links">
					<div class="footer-col">
						<h4>Legal</h4>
						<a href="/privacy-policy">Privacy Policy</a>
						<a href="/terms-of-service">Terms of Service</a>
						<a href="/terms-of-use">Terms of Use</a>
					</div>
					<div class="footer-col">
						<h4>Resources</h4>
						<a href="/#program">About CSR</a>
						<a href="/#requirements">Requirements</a>
					</div>
				</div>
			</div>
			<div class="footer-bottom">
				<p>&copy; 2025 IPTalons. All rights reserved.</p>
			</div>
		</div>
	</footer>
</BaseLayout>

<style>
	/* Header */
	header {
		background: linear-gradient(135deg, #ffffff 0%, #f0fdf4 100%);
		border-bottom: 3px solid var(--primary);
		padding: 1.5rem 0;
		box-shadow: 0 4px 12px rgba(4, 120, 87, 0.15);
	}

	.header-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.5rem 1rem;
		background: white;
		border-radius: 0.75rem;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.logo:hover {
		box-shadow: 0 4px 16px rgba(4, 120, 87, 0.2);
		transform: translateY(-2px);
	}

	.logo img {
		height: 60px;
		width: auto;
	}

	.logo h1 {
		font-size: 1.25rem;
		margin: 0;
		background: linear-gradient(135deg, var(--primary), var(--secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.logo sup {
		font-size: 0.6em;
	}

	/* Login Section */
	.login-section {
		padding: 4rem 0;
		background: linear-gradient(135deg, #ecfdf5 0%, #ffffff 100%);
		min-height: calc(100vh - 200px);
		display: flex;
		align-items: center;
	}

	.login-container {
		max-width: 500px;
		margin: 0 auto;
	}

	.login-card {
		background: white;
		padding: 3rem;
		border-radius: 1rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
	}

	.login-card h2 {
		color: var(--dark);
		margin-bottom: 0.5rem;
		text-align: center;
	}

	.login-subtitle {
		color: var(--gray);
		margin-bottom: 2rem;
		font-size: 1.05rem;
		text-align: center;
	}

	/* Form Styles */
	.login-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		font-weight: 600;
		color: var(--dark);
		margin-bottom: 0.5rem;
		font-size: 0.95rem;
	}

	.form-group input {
		padding: 0.875rem 1rem;
		border: 2px solid var(--light-gray);
		border-radius: 0.5rem;
		font-size: 1rem;
		transition: all 0.2s;
		font-family: inherit;
	}

	.form-group input:focus {
		outline: none;
		border-color: var(--primary);
		box-shadow: 0 0 0 3px rgba(4, 120, 87, 0.1);
	}

	.form-options {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin: -0.5rem 0;
	}

	.checkbox-label {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		cursor: pointer;
		font-size: 0.9rem;
		color: var(--dark);
	}

	.checkbox-label input[type="checkbox"] {
		width: 16px;
		height: 16px;
		cursor: pointer;
		accent-color: var(--primary);
	}

	.forgot-link {
		color: var(--primary);
		text-decoration: none;
		font-size: 0.9rem;
		font-weight: 500;
	}

	.forgot-link:hover {
		text-decoration: underline;
	}

	.btn-large {
		width: 100%;
		padding: 1.125rem 2rem;
		font-size: 1.125rem;
		margin-top: 1rem;
	}

	.signup-link {
		text-align: center;
		color: var(--gray);
		margin-top: 1rem;
		font-size: 0.95rem;
	}

	.signup-link a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
	}

	.signup-link a:hover {
		text-decoration: underline;
	}

	/* Footer */
	footer {
		background: var(--dark);
		color: white;
		padding: 4rem 0 2rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1fr auto;
		gap: 4rem;
		margin-bottom: 3rem;
	}

	.footer-brand {
		max-width: 350px;
	}

	.footer-logo {
		height: 60px;
		width: auto;
		margin-bottom: 1rem;
		display: block;
	}

	.footer-content h3 {
		color: white;
		margin-bottom: 0.75rem;
		font-size: 1.25rem;
	}

	.footer-content p {
		color: var(--light-gray);
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(2, 180px);
		gap: 3rem;
	}

	.footer-col h4 {
		color: white;
		font-size: 1rem;
		margin-bottom: 1rem;
	}

	.footer-col a {
		display: block;
		color: var(--light-gray);
		text-decoration: none;
		margin-bottom: 0.5rem;
	}

	.footer-col a:hover {
		color: white;
	}

	.footer-bottom {
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		text-align: center;
		color: var(--light-gray);
	}

	/* Responsive */
	@media (max-width: 640px) {
		.login-card {
			padding: 2rem;
		}

		.logo h1 {
			display: none;
		}

		.logo img {
			height: 50px;
		}

		.footer-content {
			grid-template-columns: 1fr;
		}

		.footer-links {
			grid-template-columns: 1fr;
		}

		.form-options {
			flex-direction: column;
			align-items: flex-start;
			gap: 0.75rem;
		}
	}
</style>
