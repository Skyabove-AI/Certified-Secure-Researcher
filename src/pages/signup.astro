---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sign Up - Certified Secure Researcher™">
	<!-- Header -->
	<header>
		<div class="container">
			<div class="header-inner">
				<a href="/" class="logo">
					<img src="/Images/CSR.png" alt="Certified Secure Researcher™" />
					<h1>Certified Secure Researcher<sup>™</sup></h1>
				</a>
			</div>
		</div>
	</header>

	<!-- Signup Section -->
	<section class="signup-section">
		<div class="container">
			<div class="signup-layout">
				<!-- Form Column -->
				<div class="form-column">
					<div class="form-card">
						<h2>Create your Certified Secure Researcher account</h2>
						<p class="form-subtitle">Start your journey to verified research security readiness</p>

						<form class="signup-form">
							<div class="form-group">
								<label for="firstName">First Name <span class="required">*</span></label>
								<input type="text" id="firstName" name="firstName" required placeholder="Enter your first name">
							</div>

							<div class="form-group">
								<label for="lastName">Last Name <span class="required">*</span></label>
								<input type="text" id="lastName" name="lastName" required placeholder="Enter your last name">
							</div>

							<div class="form-group">
								<label for="institution">Institution <span class="required">*</span></label>
								<input type="text" id="institution" name="institution" required placeholder="Your affiliated institution">
							</div>

							<div class="form-group">
								<label for="workEmail">Work Email <span class="required">*</span></label>
								<input type="email" id="workEmail" name="workEmail" required placeholder="your.email@institution.edu">
							</div>

							<div class="form-group">
								<label for="orcid">ORCiD iD <span class="optional">(Optional)</span></label>
								<input type="text" id="orcid" name="orcid" placeholder="0000-0000-0000-0000">
								<a href="https://orcid.org/register" target="_blank" class="helper-link">Need an ORCiD? Register here →</a>
							</div>

							<div class="checkbox-group">
								<label class="checkbox-label">
									<input type="checkbox" name="noOrcid">
									<span>I do not have an ORCiD iD. We will help you identify your profile using your publications.</span>
								</label>
							</div>

							<button type="submit" class="btn btn-primary btn-large">Continue</button>

							<p class="login-link">Already registered? <a href="/login">Log in here</a></p>
						</form>
					</div>
				</div>

				<!-- Info Column -->
				<div class="info-column">
					<div class="info-card">
						<h3>What You Will Need</h3>
						<ul class="info-list">
							<li>
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<polyline points="20 6 9 17 4 12"/>
								</svg>
								<span>Legal name as it appears on grant proposals</span>
							</li>
							<li>
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<polyline points="20 6 9 17 4 12"/>
								</svg>
								<span>Current institutional affiliation with work email</span>
							</li>
							<li>
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<polyline points="20 6 9 17 4 12"/>
								</svg>
								<span>ORCiD identifier or publication history</span>
							</li>
						</ul>
					</div>

					<div class="info-card">
						<h3>Why We Collect This Information</h3>
						<ul class="info-list">
							<li>
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<circle cx="12" cy="12" r="10"/>
									<line x1="12" y1="16" x2="12" y2="12"/>
									<line x1="12" y1="8" x2="12.01" y2="8"/>
								</svg>
								<span>Identity authentication and verification</span>
							</li>
							<li>
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<circle cx="12" cy="12" r="10"/>
									<line x1="12" y1="16" x2="12" y2="12"/>
									<line x1="12" y1="8" x2="12.01" y2="8"/>
								</svg>
								<span>Pre-populate disclosure documentation</span>
							</li>
							<li>
								<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<circle cx="12" cy="12" r="10"/>
									<line x1="12" y1="16" x2="12" y2="12"/>
									<line x1="12" y1="8" x2="12.01" y2="8"/>
								</svg>
								<span>Link to federal research security systems</span>
							</li>
						</ul>
					</div>

					<div class="info-card">
						<h3>Need Assistance?</h3>
						<p>If you have questions about the registration process, please contact us:</p>
						<a href="mailto:support@certifiedsecureresearcher.com" class="contact-email">support@certifiedsecureresearcher.com</a>
						<p class="assistance-note">Or <a href="/#program">review the program overview</a> for more information about CSR certification.</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer>
		<div class="container">
			<div class="footer-content">
				<div class="footer-brand">
					<img src="/Images/CSR.png" alt="Certified Secure Researcher™" class="footer-logo" />
					<h3>Certified Secure Researcher™</h3>
					<p>Trusted security certification for researchers worldwide.</p>
				</div>
				<div class="footer-links">
					<div class="footer-col">
						<h4>Legal</h4>
						<a href="/privacy-policy">Privacy Policy</a>
						<a href="/terms-of-service">Terms of Service</a>
						<a href="/terms-of-use">Terms of Use</a>
					</div>
					<div class="footer-col">
						<h4>Resources</h4>
						<a href="/#program">About CSR</a>
						<a href="/#requirements">Requirements</a>
					</div>
				</div>
			</div>
			<div class="footer-bottom">
				<p>&copy; 2025 IPTalons. All rights reserved.</p>
			</div>
		</div>
	</footer>
</BaseLayout>

<style>
	/* Header */
	header {
		background: linear-gradient(135deg, #ffffff 0%, #f0fdf4 100%);
		border-bottom: 3px solid var(--primary);
		padding: 1.5rem 0;
		box-shadow: 0 4px 12px rgba(4, 120, 87, 0.15);
	}

	.header-inner {
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.logo {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 0.5rem 1rem;
		background: white;
		border-radius: 0.75rem;
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
		text-decoration: none;
		transition: all 0.3s ease;
	}

	.logo:hover {
		box-shadow: 0 4px 16px rgba(4, 120, 87, 0.2);
		transform: translateY(-2px);
	}

	.logo img {
		height: 60px;
		width: auto;
	}

	.logo h1 {
		font-size: 1.25rem;
		margin: 0;
		background: linear-gradient(135deg, var(--primary), var(--secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.logo sup {
		font-size: 0.6em;
	}

	/* Signup Section */
	.signup-section {
		padding: 4rem 0;
		background: linear-gradient(135deg, #ecfdf5 0%, #ffffff 100%);
		min-height: calc(100vh - 200px);
	}

	.signup-layout {
		display: grid;
		grid-template-columns: 1fr 400px;
		gap: 3rem;
		align-items: start;
	}

	/* Form Column */
	.form-column {
		max-width: 600px;
	}

	.form-card {
		background: white;
		padding: 3rem;
		border-radius: 1rem;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
	}

	.form-card h2 {
		color: var(--dark);
		margin-bottom: 0.5rem;
	}

	.form-subtitle {
		color: var(--gray);
		margin-bottom: 2rem;
		font-size: 1.05rem;
	}

	/* Form Styles */
	.signup-form {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.form-group {
		display: flex;
		flex-direction: column;
	}

	.form-group label {
		font-weight: 600;
		color: var(--dark);
		margin-bottom: 0.5rem;
		font-size: 0.95rem;
	}

	.required {
		color: #dc2626;
	}

	.optional {
		color: var(--gray);
		font-weight: 400;
		font-size: 0.875rem;
	}

	.form-group input {
		padding: 0.875rem 1rem;
		border: 2px solid var(--light-gray);
		border-radius: 0.5rem;
		font-size: 1rem;
		transition: all 0.2s;
		font-family: inherit;
	}

	.form-group input:focus {
		outline: none;
		border-color: var(--primary);
		box-shadow: 0 0 0 3px rgba(4, 120, 87, 0.1);
	}

	.helper-link {
		display: inline-block;
		margin-top: 0.5rem;
		color: var(--primary);
		font-size: 0.875rem;
		text-decoration: none;
		font-weight: 500;
	}

	.helper-link:hover {
		text-decoration: underline;
	}

	.checkbox-group {
		margin: 0.5rem 0;
	}

	.checkbox-label {
		display: flex;
		align-items: start;
		gap: 0.75rem;
		cursor: pointer;
		font-size: 0.95rem;
		color: var(--dark);
	}

	.checkbox-label input[type="checkbox"] {
		margin-top: 0.25rem;
		width: 18px;
		height: 18px;
		cursor: pointer;
		accent-color: var(--primary);
	}

	.btn-large {
		width: 100%;
		padding: 1.125rem 2rem;
		font-size: 1.125rem;
		margin-top: 1rem;
	}

	.login-link {
		text-align: center;
		color: var(--gray);
		margin-top: 1rem;
		font-size: 0.95rem;
	}

	.login-link a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 600;
	}

	.login-link a:hover {
		text-decoration: underline;
	}

	/* Info Column */
	.info-column {
		position: sticky;
		top: 100px;
	}

	.info-card {
		background: white;
		padding: 2rem;
		border-radius: 1rem;
		margin-bottom: 1.5rem;
		box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
	}

	.info-card h3 {
		color: var(--dark);
		margin-bottom: 1.25rem;
		font-size: 1.25rem;
	}

	.info-list {
		list-style: none;
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.info-list li {
		display: flex;
		align-items: start;
		gap: 0.75rem;
		color: var(--gray);
	}

	.info-list svg {
		flex-shrink: 0;
		color: var(--primary);
		margin-top: 0.125rem;
	}

	.contact-email {
		display: inline-block;
		color: var(--primary);
		font-weight: 600;
		text-decoration: none;
		margin: 1rem 0;
		padding: 0.75rem 1.25rem;
		background: rgba(4, 120, 87, 0.05);
		border-radius: 0.5rem;
		transition: all 0.2s;
	}

	.contact-email:hover {
		background: rgba(4, 120, 87, 0.1);
	}

	.assistance-note {
		color: var(--gray);
		font-size: 0.9rem;
		margin-top: 1rem;
	}

	.assistance-note a {
		color: var(--primary);
		text-decoration: none;
		font-weight: 500;
	}

	.assistance-note a:hover {
		text-decoration: underline;
	}

	/* Footer */
	footer {
		background: var(--dark);
		color: white;
		padding: 4rem 0 2rem;
	}

	.footer-content {
		display: grid;
		grid-template-columns: 1fr auto;
		gap: 4rem;
		margin-bottom: 3rem;
	}

	.footer-brand {
		max-width: 350px;
	}

	.footer-logo {
		height: 60px;
		width: auto;
		margin-bottom: 1rem;
		display: block;
	}

	.footer-content h3 {
		color: white;
		margin-bottom: 0.75rem;
		font-size: 1.25rem;
	}

	.footer-content p {
		color: var(--light-gray);
	}

	.footer-links {
		display: grid;
		grid-template-columns: repeat(2, 180px);
		gap: 3rem;
	}

	.footer-col h4 {
		color: white;
		font-size: 1rem;
		margin-bottom: 1rem;
	}

	.footer-col a {
		display: block;
		color: var(--light-gray);
		text-decoration: none;
		margin-bottom: 0.5rem;
	}

	.footer-col a:hover {
		color: white;
	}

	.footer-bottom {
		padding-top: 2rem;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		text-align: center;
		color: var(--light-gray);
	}

	/* Responsive */
	@media (max-width: 968px) {
		.signup-layout {
			grid-template-columns: 1fr;
		}

		.info-column {
			position: static;
		}

		.form-card {
			padding: 2rem;
		}

		.footer-content {
			grid-template-columns: 1fr;
		}

		.footer-links {
			grid-template-columns: 1fr 1fr;
		}
	}

	@media (max-width: 640px) {
		.logo h1 {
			display: none;
		}

		.logo img {
			height: 50px;
		}

		.footer-links {
			grid-template-columns: 1fr;
		}
	}
</style>
